    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "express-validation": "^1.0.2",
    "http-status": "^1.0.1",
    "joi": "^13.0.2",
    "jsonwebtoken": "^8.1.0",
    "morgan": "^1.9.0",
